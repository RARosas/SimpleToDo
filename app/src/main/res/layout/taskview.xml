<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/taskView"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:backgroundTint="#B52196F3"
    android:elevation="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingVertical="8dp">

        <CheckBox
            android:id="@+id/checkDoneView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="6dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/taskTitleView"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="8dp"
            android:layout_toStartOf="@+id/taskDeleteButton"
            android:layout_toEndOf="@id/checkDoneView"
            android:text="@string/welcome_sample"
            android:fontFamily="sans-serif"/>

        <Button
            android:id="@+id/taskDeleteButton"
            android:textColor="@android:color/black"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:backgroundTint="#00FFFFFF"
            android:layout_alignParentEnd="true"
            android:text="@string/task_delete"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/taskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskDeleteButton"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:textColor="#9A000000"
            android:padding="8dp"
            android:fontFamily="sans-serif"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>